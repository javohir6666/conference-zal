{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": false,
    "strict": true,
    "types": ["node" ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "api"],
  "references": []
}

